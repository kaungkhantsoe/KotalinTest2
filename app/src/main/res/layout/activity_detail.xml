<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/detail_device_name"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView android:text="Category"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
                <TextView android:text="Value"
                    android:textStyle="bold"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Brand"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_brand"
                    android:text="Device Brand"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Technology"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_technology"
                    android:text="Device technology"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="GPRS"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_gprs"
                    android:text="Device gprs"
                    android:layout_marginLeft="100dp"/>

            </TableRow>


            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Announced Date"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_announced"
                    android:text="Device announced"
                    android:layout_marginLeft="100dp"/>

            </TableRow>


            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Dimensions"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_dimensions"
                    android:text="Device dimensions"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Weight"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_weight"
                    android:text="Device weight"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Sim"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_sim"
                    android:text="Device sim"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Type"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_type"
                    android:text="Device type"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Size"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_size"
                    android:text="Device size"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Resolution"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_resolution"
                    android:text="Device resolution"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Card Slot"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_card_slot"
                    android:text="Device card slot"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Wlan"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_wlan"
                    android:text="Device wlan"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Bluetooth"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_bluetooth"
                    android:text="Device bluetooth"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="GPS"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_gps"
                    android:text="Device gps"
                    android:layout_marginLeft="100dp"/>

            </TableRow>


            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Browser"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_browser"
                    android:text="Device browser"
                    android:layout_marginLeft="100dp"/>

            </TableRow>


            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Java"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_java"
                    android:text="Device java"
                    android:layout_marginLeft="100dp"/>

            </TableRow>


            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="Colors"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_colors"
                    android:text="Device colors"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="CPU"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail_cpu"
                    android:text="Device cpu"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="2G bands"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail__2g_bands"
                    android:text="Device _2g_bands"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:text="3.5mm jack"
                    android:layout_marginLeft="10dp"/>

                <TextView android:id="@+id/detail__3_5mm_jack"
                    android:text="Device _3_5mm_jack_"
                    android:layout_marginLeft="100dp"/>

            </TableRow>
        </TableLayout>

    </LinearLayout>

</ScrollView>